@model RayaWSoffara.Models.RegisterModel
@{
    ViewBag.Title = "تغير كلمة السر";
}


<script src="~/Content/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="clear-fix"></div>
<div id="registration_container">
    <div class="title">
        <span>@ViewBag.Title</span>
    </div>

    <div class="clear-fix"></div>

    @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { @id = "form", @name = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <span>@ViewBag.ErrorMsg</span>
        
        <div id="reg_div">
            <div class="form-group">
                <label class="pull-left">البريد الالكتروني</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div id="btn_reg_div">
            <input type="submit" value="إرسل" id="btn_reg" />
        </div>
    }
</div>

<script src="~/Content/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $("#form").validate({
        rules: {
            Email: {
                required: true,
                email: true
            }
        },
        messages: {
            Email: {
                required: "يجب إدخال البريد الالكتروني.",
                email: "البريد الالكتروني غير صحيح."
            }
        }
    });
</script>
